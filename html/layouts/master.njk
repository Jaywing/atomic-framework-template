<!doctype html>
<!--#if expr="$HTTP_COOKIE=/fonts\-loaded\=true/" -->
<html lang="{{ lang }}" class="fonts-loaded">
<!--#else -->
<html lang="{{ lang }}">
<!--#endif -->
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <meta name="author" content="{{ author.name }}"/>

  <title>{% block metaTitle %}Atomic - by Jaywing{% endblock %}</title>

  <meta name="format-detection" content="telephone=no">

  {% include 'shared/app-icons.njk' %}

  <link rel="stylesheet" href="/assets/css/app.css">

  <script>if(document.documentElement){document.documentElement.classList.add('js');}</script>
  {% block metaHead %}{% endblock %}
</head>

<body id="top" class="o-site">

  <a href="#content" class="c-skip-link">Skip to content</a>

  {% block header %}{% endblock %}

  {% block main %}{% endblock %}

  {% block footer %}{% endblock %}

  <script src="/assets/js/app.js" async></script>

  {% block javascript %}{% endblock %}

</body>
</html>
