{% from 'macros/icon.njk' import Icon %}
{% from 'shared/page-nav.njk' import PageSection %}
<!doctype html>
<!--#if expr="$HTTP_COOKIE=/fonts\-loaded\=true/" -->
<html lang="{{ lang }}" class="fonts-loaded">
<!--#else -->
<html lang="{{ lang }}">
<!--#endif -->
<head>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="author" content="{{ author }}"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1"/>
  <title>{% block metaTitle %}Gulp Asset Pipeline{% endblock %}</title>

  <!-- standard styles - hidden from < ie10 -->
  <link rel="stylesheet" href="/assets/css/docs.css">

  {% include 'shared/app-icons.njk' %}

  {% block head %}{% endblock %}

</head>
<body id="top" class="o-site u-scrollY">

  <a href="#content" class="c-skip-link">Skip to content</a>

  {# <header role="banner" class="o-Site-header docs-GlobalHeader"></header> #}

  <main id="content" class="o-site__content">
  {% block main %}

    <div class="c-pattern o-flex-grid o-flex-grid@md--reverse">

      <article class="o-flex-grid__cell o-size@md--9 o-size@lg--10">
      {% block content %}

      {% endblock %}
      </article>

      <section class="o-flex-grid__cell o-size--full o-size@md--3 o-size@lg--2">
      {% block sidebar %}
        {% set model = sections[0] %}
        {{ PageSection(model) }}
      {% endblock %}
      </section>

    </div>

  {% endblock %}
  </main>

  {# <footer role="contentinfo" class="o-Site-footer docs-footer"></footer> #}

  {# <script src="//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.6.0/highlight.min.js"></script>
  <script>hljs.initHighlightingOnLoad();</script> #}

  <script src="/assets/js/app.js" async></script>

  {% block javascript %}{% endblock %}

</body>
</html>
